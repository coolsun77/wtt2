<%= link_to 'New user', new_user_path %>
      


<table>
  <tr>
    <th>user</th>
    <th>role</th>
    <th colspan="2"></th>
  </tr>
     



  <% @users.each do |user| %>
    <tr>
      <td><%= user.name %></td>
      <td><%= user.role %></td>
